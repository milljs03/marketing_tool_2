rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is an admin
    // We will set a custom claim 'role' = 'admin' on your account later
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    // Helper to check if user owns the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Collection: Users (Stores profile info)
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin(); // Only admins can create/edit user roles
    }

    // Collection: Campaigns (The actual marketing work)
    match /campaigns/{campaignId} {
      // Clients can read their own campaigns, Admins can read all
      allow read: if resource.data.clientId == request.auth.uid || isAdmin();
      
      // Clients can only create requests (Drafts)
      allow create: if request.auth != null && request.resource.data.clientId == request.auth.uid;
      
      // Only admins can update status (Go live, Complete) or edits
      allow update, delete: if isAdmin(); 
      // Note: We might add a rule later allowing clients to 'Approve' specific fields
    }
  }
}