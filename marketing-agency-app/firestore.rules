rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    
    // 1. Safer Admin Check: Prevents crash if user doc doesn't exist
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    match /users/{userId} {
      // Allow reading own profile (Fixes app.js:44 crash)
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow CREATING your own profile (Fixes Google Sign In bug)
      // We enforce that you can only create yourself as a 'client'
      allow create: if isOwner(userId) && request.resource.data.role == 'client';
      
      // Only Admins can promote roles or delete users
      allow update, delete: if isAdmin();
    }

    // Clients Collection (Business Profiles)
    match /clients/{clientId} {
      allow read, write: if isAdmin();
    }

    // Campaigns Collection
    match /campaigns/{campaignId} {
      allow read: if resource.data.clientId == request.auth.uid || isAdmin();
      allow create: if request.auth != null && request.resource.data.clientId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
  }
}